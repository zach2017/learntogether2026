{
  "name": "express-react-server-ts",
  "version": "1.0.0",
  "description": "Express server serving React Vite build with CORS and TypeScript",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:server": "tsc",
    "build:react": "cd ../react-app && npm run build && cp -r dist ../express-server/react-build",
    "build:all": "npm run build:react && npm run build:server",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --esm src/server.ts",
    "dev:watch": "nodemon --exec \"node --loader ts-node/esm\" src/server.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist react-build",
    "serve:react": "npm run build:all && npm start"
  },
  "keywords": ["express", "react", "vite", "cors", "typescript", "keycloak"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}